<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 数字化解决方案服务提供商</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DigitalSolutionsWeb.styles.css" asp-append-version="true" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-layers-half me-2"></i>数字未来
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">首页</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Services">服务</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="CaseStudies">案例</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">关于我们</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">联系我们</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    @RenderBody()

    <footer class="bg-dark text-white py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5 class="mb-4 text-primary">数字未来</h5>
                    <p>我们是专业的数字化解决方案服务提供商，致力于帮助企业实现数字化转型，提升业务价值。</p>
                    <div class="d-flex mt-4">
                        <a href="#" class="me-3 text-white fs-5"><i class="bi bi-linkedin"></i></a>
                        <a href="#" class="me-3 text-white fs-5"><i class="bi bi-twitter-x"></i></a>
                        <a href="#" class="me-3 text-white fs-5"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white fs-5"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>
                <div class="col-md-2 mb-4 mb-md-0">
                    <h6 class="mb-4">快速链接</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a class="text-white text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">首页</a></li>
                        <li class="mb-2"><a class="text-white text-decoration-none" asp-area="" asp-controller="Home" asp-action="Services">服务</a></li>
                        <li class="mb-2"><a class="text-white text-decoration-none" asp-area="" asp-controller="Home" asp-action="CaseStudies">案例</a></li>
                        <li class="mb-2"><a class="text-white text-decoration-none" asp-area="" asp-controller="Home" asp-action="About">关于我们</a></li>
                        <li><a class="text-white text-decoration-none" asp-area="" asp-controller="Home" asp-action="Contact">联系我们</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4 mb-md-0">
                    <h6 class="mb-4">联系方式</h6>
                    <ul class="list-unstyled" id="footer-contact-info">
                        <li class="mb-2" id="footer-address"><i class="bi bi-geo-alt me-2"></i>加载中...</li>
                        <li class="mb-2" id="footer-phone"><i class="bi bi-telephone me-2"></i>加载中...</li>
                        <li class="mb-2" id="footer-email"><i class="bi bi-envelope me-2"></i>加载中...</li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6 class="mb-4">订阅我们的通讯</h6>
                    <p class="small">获取最新的行业动态和解决方案更新</p>
                    <form>
                        <div class="input-group mb-3">
                            <input type="email" class="form-control" placeholder="您的邮箱地址" aria-label="您的邮箱地址">
                            <button class="btn btn-primary" type="button">订阅</button>
                        </div>
                    </form>
                </div>
            </div>
            <hr class="my-4">
            <div class="row">
                <div class="col-md-6 small">
                    &copy; 2025 数字未来科技有限公司 版权所有
                </div>
                <div class="col-md-6 text-md-end small">
                    <a class="text-white text-decoration-none" asp-area="" asp-controller="Home" asp-action="Privacy">隐私政策</a> | 
                    <a class="text-white text-decoration-none" asp-area="" asp-controller="Home" asp-action="Terms">服务条款</a>
                </div>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/password-alert.js" asp-append-version="true"></script>
    <script>
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });
        
        // 加载底部联系信息
        $(document).ready(function() {
            loadFooterContactInfo();
        });
        
        // 直接显示联系信息，不再通过API获取
        showDefaultContactInfo();
        
        function showDefaultContactInfo() {
            const addressElement = document.getElementById('footer-address');
            const phoneElement = document.getElementById('footer-phone');
            const emailElement = document.getElementById('footer-email');
            
            if (addressElement) {
                addressElement.innerHTML = '<i class="bi bi-geo-alt me-2"></i>中国上海市杨浦区伟德路6号';
            }
            if (phoneElement) {
                phoneElement.innerHTML = '<i class="bi bi-telephone me-2"></i>400-123-45678';
            }
            if (emailElement) {
                emailElement.innerHTML = '<i class="bi bi-envelope me-2"></i>contact@digitalsolutions.com';
            }
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
