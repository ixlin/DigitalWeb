    <style>
        .privacy-content h2 {
            color: var(--bs-primary);
            margin-top: 2rem;
        }
        
        .privacy-content h3 {
            font-size: 1.25rem;
        }
        
        .privacy-content p, .privacy-content li {
            line-height: 1.7;
        }
        
        .privacy-content ul {
            margin-bottom: 1.5rem;
        }
    </style>
