@model SystemSettingsViewModel
@{
    ViewData["Title"] = "系统设置";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">系统设置</h1>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form asp-action="Index" method="post" class="needs-validation" novalidate>
                <div class="row">
                    <!-- 公司信息 -->
                    <div class="col-lg-12">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-building me-2"></i>公司信息
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="CompanyName" class="form-label"></label>
                                            <input asp-for="CompanyName" class="form-control" placeholder="请输入公司名称" required />
                                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="CompanyPhone" class="form-label"></label>
                                            <input asp-for="CompanyPhone" class="form-control" placeholder="请输入联系电话" required />
                                            <span asp-validation-for="CompanyPhone" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="CompanyEmail" class="form-label"></label>
                                            <input asp-for="CompanyEmail" class="form-control" placeholder="请输入联系邮箱" required />
                                            <span asp-validation-for="CompanyEmail" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="CompanyAddress" class="form-label"></label>
                                            <textarea asp-for="CompanyAddress" class="form-control" rows="3" placeholder="请输入公司详细地址" required></textarea>
                                            <span asp-validation-for="CompanyAddress" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 邮件设置 -->
                    <div class="col-lg-12">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-envelope me-2"></i>邮件设置
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="SenderEmail" class="form-label"></label>
                                            <input asp-for="SenderEmail" class="form-control" placeholder="请输入发送邮箱" required />
                                            <span asp-validation-for="SenderEmail" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="SenderName" class="form-label"></label>
                                            <input asp-for="SenderName" class="form-control" placeholder="请输入发送者名称" required />
                                            <span asp-validation-for="SenderName" class="text-danger"></span>
                                            <div class="form-text">
                                                <i class="fas fa-info-circle me-1"></i>
                                                此名称将在收件人邮箱中显示为发件人
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="SenderPassword" class="form-label"></label>
                                            <input asp-for="SenderPassword" class="form-control" placeholder="请输入邮箱密码或授权码" required />
                                            <span asp-validation-for="SenderPassword" class="text-danger"></span>
                                            <div class="form-text">
                                                <i class="fas fa-shield-alt me-1"></i>
                                                QQ邮箱请使用授权码，不是登录密码
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="AdminEmail" class="form-label"></label>
                                            <input asp-for="AdminEmail" class="form-control" placeholder="请输入管理员邮箱" required />
                                            <span asp-validation-for="AdminEmail" class="text-danger"></span>
                                            <div class="form-text">接收联系表单通知的邮箱地址</div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="SmtpServer" class="form-label"></label>
                                            <input asp-for="SmtpServer" class="form-control" placeholder="请输入SMTP服务器" required />
                                            <span asp-validation-for="SmtpServer" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="mb-3">
                                            <label asp-for="SmtpPort" class="form-label"></label>
                                            <input asp-for="SmtpPort" class="form-control" type="number" min="1" max="65535" placeholder="端口" required />
                                            <span asp-validation-for="SmtpPort" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="mb-3">
                                            <label class="form-label d-block">&nbsp;</label>
                                            <div class="form-check mt-2">
                                                <input asp-for="UseSsl" class="form-check-input" type="checkbox" />
                                                <label asp-for="UseSsl" class="form-check-label">
                                                    启用SSL安全连接
                                                </label>
                                            </div>
                                            <div class="form-text">建议启用SSL以确保邮件传输安全</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body text-center">
                                <button type="submit" class="btn btn-primary btn-lg me-3">
                                    <i class="fas fa-save me-2"></i>保存设置
                                </button>
                                <a href="@Url.Action("Index", "Home", new { area = "Admin" })" class="btn btn-secondary btn-lg">
                                    <i class="fas fa-times me-2"></i>取消
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Bootstrap 表单验证
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}
