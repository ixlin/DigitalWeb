@{
    ViewData["Title"] = "控制面板";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">控制面板</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">首页</a></li>
                    <li class="breadcrumb-item active">控制面板</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="m-0">欢迎使用管理后台</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">您已登录管理员账户。您可以管理网站内容、系统设置等资源。</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <div class="card bg-primary">
                    <div class="card-header">
                        <h5 class="m-0">
                            <i class="fas fa-envelope mr-2"></i>联系消息
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text text-white">查看和管理用户通过联系表单发送的消息</p>
                        <a asp-area="Admin" asp-controller="ContactMessages" asp-action="Index" class="btn btn-outline-light">
                            <i class="fas fa-arrow-right mr-1"></i>管理消息
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="card bg-success">
                    <div class="card-header">
                        <h5 class="m-0">
                            <i class="fas fa-cog mr-2"></i>系统设置
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text text-white">管理网站配置、联系方式等基本设置</p>
                        <a asp-area="Admin" asp-controller="SystemSettings" asp-action="Index" class="btn btn-outline-light">
                            <i class="fas fa-arrow-right mr-1"></i>管理设置
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
