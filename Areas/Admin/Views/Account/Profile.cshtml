@using DigitalSolutionsWeb.Areas.Admin.Controllers
@model ProfileViewModel
@{
    ViewData["Title"] = "个人资料";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">个人资料</h1>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="row">
                <!-- 基本信息 -->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-user me-2"></i>基本信息
                            </h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="Profile" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                                
                                <div class="mb-3">
                                    <label class="form-label">用户名</label>
                                    <input value="@Model.Username" class="form-control" readonly />
                                    <div class="form-text">用户名无法更改</div>
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label">邮箱</label>
                                    <input value="@Model.Email" class="form-control" readonly />
                                    <div class="form-text">邮箱无法更改</div>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="PhoneNumber" class="form-label"></label>
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="请输入电话号码" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>

                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-2"></i>保存更改
                                    </button>
                                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left me-2"></i>返回后台
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- 密码管理 -->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-key me-2"></i>密码管理
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-3">
                                <i class="fas fa-info-circle me-1"></i>
                                定期更改密码有助于保护您的账户安全。
                            </p>
                            
                            <div class="d-grid">
                                <a asp-action="ChangePassword" class="btn btn-warning">
                                    <i class="fas fa-lock me-2"></i>更改密码
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- 账户安全 -->
                    <div class="card mt-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-shield-alt me-2"></i>账户安全
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-6">
                                    <div class="border-end">
                                        <h6 class="text-success">
                                            <i class="fas fa-check-circle"></i>
                                        </h6>
                                        <small class="text-muted">账户已激活</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <h6 class="text-success">
                                        <i class="fas fa-user-shield"></i>
                                    </h6>
                                    <small class="text-muted">管理员权限</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
