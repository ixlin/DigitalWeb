<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - 数字解决方案管理后台</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/fontawesome-free/css/all.min.css">
    <!-- Bootstrap 4 -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <!-- AdminLTE Theme style -->
    <link rel="stylesheet" href="~/lib/admin-lte/css/adminlte.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/lib/admin-lte/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    
    <style>
        body {
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #0143a3, #0273d4);
            height: 100vh;
            font-family: 'Source Sans Pro', sans-serif;
        }
        
        .login-page {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 20px;
        }
        
        .login-box {
            width: 360px;
            margin: 0 auto;
        }
        
        .login-logo {
            font-size: 2.2rem;
            text-align: center;
            margin-bottom: 25px;
            color: white;
            font-weight: 300;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }
        
        .login-logo b {
            font-weight: 600;
        }
        
        .card {
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
            border: none;
        }
        
        .login-card-body {
            border-radius: 8px;
            padding: 30px;
            background: rgba(255, 255, 255, 0.98);
        }
        
        .login-box-msg {
            margin: 0 0 20px 0;
            text-align: center;
            color: #666;
            font-size: 14px;
        }
        
        .input-group-text {
            background-color: #f8f9fa;
            border-color: #ced4da;
            color: #495057;
        }
        
        .form-control {
            border-color: #ced4da;
        }
        
        .form-control:focus {
            border-color: #0143a3;
            box-shadow: 0 0 0 0.2rem rgba(1, 67, 163, 0.25);
        }
        
        .btn-primary {
            background-color: #0143a3;
            border-color: #0143a3;
            padding: 8px 16px;
            font-weight: 500;
        }
        
        .btn-primary:hover,
        .btn-primary:focus {
            background-color: #0273d4;
            border-color: #0273d4;
            box-shadow: 0 0 0 0.2rem rgba(1, 67, 163, 0.25);
        }
        
        .icheck-primary input[type="checkbox"]:checked + label::before {
            background-color: #0143a3;
            border-color: #0143a3;
        }
        
        .text-muted {
            color: #999 !important;
        }
        
        /* 移动端响应式 */
        @@media (max-width: 576px) {
            .login-box {
                width: 100%;
                max-width: 340px;
            }
            
            .login-logo {
                font-size: 1.8rem;
            }
            
            .login-card-body {
                padding: 20px;
            }
        }
    </style>
</head>
<body class="login-page">
    <div class="login-box">
        <div class="login-logo">
            <b>数字未来</b> 管理后台
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/lib/admin-lte/js/adminlte.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
